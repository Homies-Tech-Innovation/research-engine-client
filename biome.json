{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["**"],
		"ignore": ["node_modules/", "dist/", "build/", "coverage/", "*.tsbuildinfo"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100,
		"lineEnding": "lf"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useConst": "error",
				"useSingleVarDeclarator": "error",
				"useShorthandAssign": "error"
			},
			"complexity": {
				"noExcessiveCognitiveComplexity": "warn"
			},
			"correctness": {
				"noUnusedVariables": "error",
				"useExhaustiveDependencies": "warn"
			},
			"suspicious": {
				"noExplicitAny": "warn"
			},
			"a11y": {
				"useButtonType": "error",
				"noSvgWithoutTitle": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "always",
			"trailingCommas": "es5",
			"arrowParentheses": "always"
		}
	},
	"overrides": [
		{
			"include": ["*.tsx", "*.jsx"],
			"linter": {
				"rules": {
					"correctness": {
						"useExhaustiveDependencies": "warn"
					}
				}
			}
		}
	]
}
